{% if root.route == '/docs' %}
{# Under /docs, the root for the menu is the 2nd level menu, ie the versions. #}
{% set _root = page.find('/docs/' ~ uri.paths[1]) %}
{% else %}
{% set _root = root %}
{% endif %}
{% for item in _root.children %}
        <h4>{{ item.menu }}</h4>
        <ul class="list-unstyled">
{% for child in item.children %}
{% if child.visible %}
            <li>&nbsp;<i class="fa fa-chevron-right color-gray-lighter"></i>&nbsp;<a href="{{ child.url }}">{{ child.title }}</a></li>
{% endif %}
{% endfor %}
        </ul>
{% endfor %}
